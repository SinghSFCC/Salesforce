{
  "name": "int_adyen_SFRA",
  "version": "20.1.3",
  "description": "SFRA cartridge",
  "main": "index.js",
  "paths": {
    "base": "../storefront-reference-architecture/cartridges/app_storefront_base/"
  },
  "scripts": {
    "unitTest": "sgmf-scripts --test cartridges/int_adyen_SFRA/test/unit/**/*.js",
    "lint": "eslint --ext js src",
    "lint:fix": "eslint --fix src",
    "format": "prettier-eslint $PWD/src/**/*.js",
    "upload": "sgmf-scripts --upload -- ",
    "uploadCartridge": "sgmf-scripts --uploadCartridge int_adyen_SFRA && sgmf-scripts --uploadCartridge int_adyen_overlay && sgmf-scripts --uploadCartridge int_adyen_controllers",
    "watch": "sgmf-scripts --watch",
    "compile:js": "sgmf-scripts --compile js",
    "compile:scss": "sgmf-scripts --compile css",
    "transpile": "babel ./src/cartridges  -d ./cartridges --copy-files",
    "build": "npm run compile:js && npm run compile:scss",
    "test": "jest"
  },
  "jest": {
    "setupFiles": [
      "./setup-jest.js"
    ]
  },
  "engines": {
    "node": ">=4.0"
  },
  "dependencies": {
    "babel-loader": "^8.0.4",
    "cleave.js": "^1.0.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.6",
    "babel-eslint": "^10.1.0",
    "chai": "^3.5.0",
    "css-loader": "^1.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-formatter-summary": "^1.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.1.3",
    "istanbul": "^0.4.4",
    "jest": "^25.1.0",
    "jquery": "^3.4.1",
    "mocha": "^7.2.0",
    "node-sass": "^4.14.1",
    "postcss-loader": "^3.0.0",
    "prettier": "2.0.5",
    "prettier-eslint-cli": "^5.0.0",
    "proxyquire": "1.7.4",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "serviceworker-webpack-plugin": "^1.0.0-alpha02",
    "sgmf-scripts": "^2.1.1",
    "sinon": "^1.17.4",
    "style-loader": "^0.23.1",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^12.0.0",
    "stylelint-scss": "^3.17.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext js --fix src",
      "git add"
    ]
  }
}
